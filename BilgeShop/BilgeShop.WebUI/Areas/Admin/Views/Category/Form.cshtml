
@model CategoryFormViewModel 

<div class="row">

	<div class="col-8 offset-2">

		<div class="card" style="border:solid 2px">

			<div class="card-header fw-bold fs-5">
				@(Model.Id==0? "Kategori ekleme Formu" :"Kategori Güncelleme Formu")
			</div>

			<div class="card-body">

				<form method="post" asp-area="admin" asp-controller="Category" asp-action="Save">

					@if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
					{
						<div class="alert alert-danger">@ViewBag.ErrorMessage </div>
					}
					<input asp-for="Id" />

					<div class="mb-2"> 
						<label asp-for="Name"></label>
						<input asp-for="Name" class="form-control" style="background-color:thistle"/>
						<span class="text-danger mt-1" asp-validation-for="Name"></span>
					</div>

					<div class="mb-2">
						<label asp-for="Description"></label>
						<input asp-for="Description" class="form-control" style="background-color:thistle" />
						<span class="text-danger mt-1" asp-validation-for="Description"></span>
					</div>

					<button type="submit" class="btn btn-success mt-3 float-end">@(Model.Id == 0 ? "Kaydet" : "Güncelle")</button>
					

				</form>

				
			</div>

		</div>




	</div>

</div>