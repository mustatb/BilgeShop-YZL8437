@model List<CategoryListViewModel>

<div>
	<div class="float-start"> <h2> Kategoriler</h2> </div>
	<div class="float-end">  <a asp-area="Admin" asp-controller="Category" asp-action="New" class="btn btn-primary">Yeni Kategori</a> </div>
</div>

<div style="padding-top:75px">

	<table id="categoryTable" class="table table-striped">
		<thead>
			<tr>
				<th> Kategori Adı</th>
				<th>Açıklama</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach(var item in Model)
			{
				<tr>
					<td>@item.Name</td>
					<td>@item.Summary</td>
					<td>
						<a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Düzenle</a>
						<a asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id"  asp class="btn btn-sm btn-danger">Sil</a>
					</td>
				</tr>
			}


		</tbody>


	</table>

</div>

@section Scripts{
	<script>
		var table = new DataTable('#categoryTable', {
			language: {
				url: '//cdn.datatables.net/plug-ins/1.13.6/i18n/tr.json',
			},
			pageLength: 3
		});

	</script>
						}